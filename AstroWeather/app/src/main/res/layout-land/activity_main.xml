<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/fragmentSun"
        class="com.astroweatherapp.jakub.astroweather.SunFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_sun">

    </fragment>

    <fragment
        android:id="@+id/fragmentMoon"
        class="com.astroweatherapp.jakub.astroweather.MoonFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_moon">

    </fragment>

</LinearLayout>